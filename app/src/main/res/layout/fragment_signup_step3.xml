<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/step3_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <!-- 제목 -->
    <TextView
        android:id="@+id/tv_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="아이디가 필요합니다"
        style="@style/TextAppearance.App.TitleLarge"
        android:fontFamily="@font/roboto_bold"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- 가이드 -->
    <TextView
        android:id="@+id/tv_guide"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:text="영문 대소문자 및 숫자,\n특수기호 . 와 _ 를 이용하여 생성해주세요"
        style="@style/TextAppearance.App.LabelSmall"
        android:textColor="@color/gray3"
        app:layout_constraintTop_toBottomOf="@id/tv_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- @ + 입력 -->
    <LinearLayout
        android:id="@+id/id_row"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:layout_marginHorizontal="32dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/tv_guide"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/tv_at"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="\@"
            style="@style/TextAppearance.App.LabelSmall"
            android:textColor="@color/gray3"/>

        <EditText
            android:id="@+id/et_login_id"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:hint="UsersId1234"
            style="@style/TextAppearance.App.LabelSmall"
            android:textColor="@color/gray3"
            android:textColorHint="@color/gray3"
            android:includeFontPadding="false"
            android:minHeight="0dp"
            android:paddingStart="1dp"
            android:paddingBottom="8dp"
            android:gravity="bottom"
            android:inputType="textNoSuggestions|textVisiblePassword"
            android:maxLines="1"/>
        </LinearLayout>

    <View
        android:id="@+id/line_login_id"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginHorizontal="32dp"
        android:background="@color/gray4"
        app:layout_constraintTop_toBottomOf="@id/id_row"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- 상태 메시지 -->
    <TextView
        android:id="@+id/tv_login_id_msg"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:layout_marginEnd="32dp"
        android:layout_marginTop="3dp"
        style="@style/TextAppearance.App.LabelTiny"
        android:text="사용 가능한 아이디입니다"
        android:textColor="@color/point_blue"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/line_login_id"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>