<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/step2_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <!-- 제목 -->
    <TextView
        android:id="@+id/tv_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="비밀번호가 필요합니다"
        style="@style/TextAppearance.App.TitleLarge"
        android:fontFamily="@font/roboto_bold"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- 설명 -->
    <TextView
        android:id="@+id/tv_desc1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:text="영문,숫자를 조합한 8자 이상이어야 합니다"
        style="@style/TextAppearance.App.LabelSmall"
        android:textColor="@color/gray3"
        app:layout_constraintTop_toBottomOf="@id/tv_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tv_desc2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:text="(특수기호 ~, !, @, _, #, * 사용 가능)"
        style="@style/TextAppearance.App.LabelSmall"
        android:textColor="@color/gray3"
        app:layout_constraintTop_toBottomOf="@id/tv_desc1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- 비밀번호 입력 -->
    <EditText
        android:id="@+id/et_pw"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="32dp"
        android:layout_marginTop="44dp"
        android:background="@android:color/transparent"
        android:hint="비밀번호"
        style="@style/TextAppearance.App.LabelSmall"
        android:textColor="@color/gray3"
        android:textColorHint="@color/gray3"
        android:inputType="textPassword"
        android:maxLines="1"
        android:includeFontPadding="false"
        android:minHeight="0dp"
        android:paddingStart="4dp"
        android:paddingBottom="8dp"
        android:gravity="bottom"
        app:layout_constraintTop_toBottomOf="@id/tv_desc2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- 밑줄 -->
    <View
        android:id="@+id/line_pw"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginHorizontal="32dp"
        android:background="@color/gray4"
        app:layout_constraintTop_toBottomOf="@id/et_pw"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- 눈 토글 -->
    <ImageView
        android:id="@+id/iv_pw_toggle"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:src="@drawable/ic_eye_off"
        android:contentDescription="@string/app_name"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintTop_toTopOf="@id/et_pw"
        app:layout_constraintEnd_toEndOf="@id/et_pw"/>

    <!-- 에러 -->
    <TextView
        android:id="@+id/tv_pw_error"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:layout_marginEnd="32dp"
        android:layout_marginTop="3dp"
        android:text="비밀번호가 8자 미만입니다"
        style="@style/TextAppearance.App.LabelTiny"
        android:textColor="@color/point_red"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/line_pw"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>