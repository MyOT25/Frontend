<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:padding="16dp"
    tools:context=".ticket.ui.RecordFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_change_musical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginBottom="10dp"
            android:text="관극 변경"
            android:textColor="@color/point_blue" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingVertical="10dp">

            <ImageView
                android:id="@+id/iv_record_info_poster"
                android:layout_width="101dp"
                android:layout_height="133dp"
                android:src="@drawable/ig_poster_placeholder"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_record_info_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:fontFamily="@font/roboto_semibold"
                android:text="킹키 부츠"
                android:textColor="@color/gray1"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/iv_record_info_poster"
                app:layout_constraintTop_toTopOf="parent" />

            <!-- 장소 -->
            <TextView
                android:id="@+id/tv_record_info_theater_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/roboto_regular"
                android:text="장소:"
                android:textColor="@color/gray1"
                android:textSize="14sp"
                app:layout_constraintStart_toStartOf="@+id/tv_record_info_title"
                app:layout_constraintTop_toBottomOf="@+id/tv_record_info_title" />

            <TextView
                android:id="@+id/tv_record_info_theater"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:fontFamily="@font/roboto_regular"
                android:text="TextView"
                android:textColor="@color/gray1"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="@+id/tv_record_info_theater_title"
                app:layout_constraintStart_toEndOf="@+id/tv_record_info_theater_title"
                app:layout_constraintTop_toTopOf="@+id/tv_record_info_theater_title" />

            <!-- 기간 -->
            <TextView
                android:id="@+id/tv_record_info_period_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/roboto_regular"
                android:text="기간:"
                android:textColor="@color/gray1"
                android:textSize="14sp"
                app:layout_constraintStart_toStartOf="@+id/tv_record_info_title"
                app:layout_constraintTop_toBottomOf="@+id/tv_record_info_theater_title" />

            <TextView
                android:id="@+id/tv_record_info_period"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginBottom="5dp"
                android:fontFamily="@font/roboto_regular"
                android:text="TextView"
                android:textColor="@color/gray1"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="@+id/tv_record_info_period_title"
                app:layout_constraintStart_toEndOf="@+id/tv_record_info_period_title"
                app:layout_constraintTop_toTopOf="@+id/tv_record_info_period_title" />

            <!-- 배우 -->
            <TextView
                android:id="@+id/tv_record_info_casting_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_regular"
                android:text="배우:"
                android:textColor="@color/gray1"
                android:textSize="14sp"
                app:layout_constraintStart_toStartOf="@+id/tv_record_info_title"
                app:layout_constraintTop_toBottomOf="@+id/tv_record_info_period_title" />

            <TextView
                android:id="@+id/tv_record_info_casting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:fontFamily="@font/roboto_regular"
                android:text="TextView"
                android:textColor="@color/gray1"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="@+id/tv_record_info_casting_title"
                app:layout_constraintStart_toEndOf="@+id/tv_record_info_casting_title"
                app:layout_constraintTop_toTopOf="@+id/tv_record_info_casting_title" />

            <!-- 평균 별점 -->
            <TextView
                android:id="@+id/tv_record_info_rating_avg_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_regular"
                android:text="평균 별점:"
                android:textColor="@color/gray1"
                android:textSize="14sp"
                app:layout_constraintStart_toStartOf="@+id/tv_record_info_title"
                app:layout_constraintTop_toBottomOf="@+id/tv_record_info_casting_title" />

            <TextView
                android:id="@+id/tv_record_info_rating_avg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:fontFamily="@font/roboto_regular"
                android:text="TextView"
                android:textColor="@color/gray1"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="@+id/tv_record_info_rating_avg_title"
                app:layout_constraintStart_toEndOf="@+id/tv_record_info_rating_avg_title"
                app:layout_constraintTop_toTopOf="@+id/tv_record_info_rating_avg_title" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_outer_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:paddingVertical="10dp">

            <TextView
                android:id="@+id/tv_record_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/roboto_semibold"
                android:text="일시"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <LinearLayout
                android:id="@+id/layout_inner_date"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:orientation="horizontal"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/tv_record_date"
                app:layout_constraintTop_toTopOf="parent">

                <include
                    android:id="@+id/input_year"
                    layout="@layout/item_record_input" />

                <include
                    android:id="@+id/input_month"
                    layout="@layout/item_record_input" />

                <include
                    android:id="@+id/input_day"
                    layout="@layout/item_record_input" />

                <include
                    android:id="@+id/input_time"
                    layout="@layout/item_record_input" />
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_outer_seating"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:paddingVertical="10dp">

            <TextView
                android:id="@+id/tv_record_seating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/roboto_semibold"
                android:text="좌석"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <LinearLayout
                android:id="@+id/layout_inner_seating"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:orientation="horizontal"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/tv_record_seating"
                app:layout_constraintTop_toTopOf="parent">

                <include
                    android:id="@+id/input_floor"
                    layout="@layout/item_record_input" />

                <include
                    android:id="@+id/input_zone"
                    layout="@layout/item_record_input" />

                <include
                    android:id="@+id/input_row"
                    layout="@layout/item_record_input" />

                <include
                    android:id="@+id/input_number"
                    layout="@layout/item_record_input" />
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_outer_casting"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:paddingVertical="10dp">

            <TextView
                android:id="@+id/tv_record_casting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_semibold"
                android:text="출연"
                android:textSize="14sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/layout_casting_container" />

            <LinearLayout
                android:id="@+id/layout_casting_container"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:orientation="vertical"
                app:layout_constraintStart_toEndOf="@id/tv_record_casting"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>


        <LinearLayout
            android:id="@+id/layout_inner_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:orientation="horizontal"
            android:paddingVertical="10dp">

            <TextView
                android:id="@+id/tv_record_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_semibold"
                android:text="후기"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/et_record_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_weight="1"
                android:background="@drawable/bg_record_input_selector"
                android:ellipsize="none"
                android:fontFamily="@font/roboto_regular"
                android:gravity="left"
                android:hint="후기를 남겨주세요!"
                android:inputType="textMultiLine"
                android:maxLines="1"
                android:minLines="1"
                android:overScrollMode="ifContentScrolls"
                android:paddingHorizontal="20dp"
                android:paddingVertical="10dp"
                android:scrollbars="vertical"
                android:scrollHorizontally="false"
                android:textSize="12sp" />
        </LinearLayout>

        <RatingBar
            android:id="@+id/ratingbar_record"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:layout_marginVertical="20dp"
            android:isIndicator="false"
            android:maxHeight="70dp"
            android:minHeight="70dp"
            android:numStars="5"
            android:progressDrawable="@drawable/ratingbar_record"
            android:rating="0"
            android:stepSize="0.5" />

        <ImageView
            android:id="@+id/btn_record"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="10dp"
            android:src="@drawable/ic_record_deactivate" />

    </LinearLayout>
</androidx.core.widget.NestedScrollView>