<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <!-- 상단 바 -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/topBar"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/ivBack"
            android:layout_width="10dp"
            android:layout_height="16dp"
            android:layout_marginStart="16dp"
            android:src="@drawable/ic_back"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:tint="@color/gray2"/>

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="커뮤니티 추가"
            android:textColor="@color/gray2"
            style="@style/TextAppearance.App.TitleMedium"
            android:fontFamily="@font/roboto_bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- 검색 바  -->
    <LinearLayout
        android:id="@+id/questionBar"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginHorizontal="12dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@drawable/bg_question_input"
        app:layout_constraintTop_toBottomOf="@id/topBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- TextView 대신 EditText -->
        <EditText
            android:id="@+id/etSearchInput"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="커뮤니티 추가"
            android:background="@android:color/transparent"
            android:paddingStart="15dp"
            android:textColor="@color/black"
            android:textColorHint="@color/gray3"
            android:inputType="text"
            style="@style/TextAppearance.App.BodySmall"/>

        <ImageView
            android:id="@+id/ivSearch"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginEnd="13dp"
            android:src="@drawable/ic_search"
            app:tint="@color/gray3" />
    </LinearLayout>

    <TextView
        android:id="@+id/tvSearchTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="20dp"
        android:text=""
        android:visibility="gone"
        android:textColor="@color/gray2"
        style="@style/TextAppearance.App.LabelLarge"
        android:fontFamily="@font/roboto_bold"
        app:layout_constraintTop_toBottomOf="@id/questionBar"
        app:layout_constraintStart_toStartOf="parent" />

    <LinearLayout
        android:id="@+id/emptySearchContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_marginTop="22dp"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/tvSearchTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/tvEmptySearch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="검색 결과가 없습니다,"
            android:textColor="@color/gray4"
            style="@style/TextAppearance.App.BodySmall"/>

        <TextView
            android:id="@+id/tvCreateRequest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="커뮤니티 개설 신청"
            android:textColor="@color/point_blue"
            style="@style/TextAppearance.App.BodySmall"
            android:fontFamily="@font/roboto_bold"
            android:paddingTop="2dp"/>
    </LinearLayout>

    <!-- 검색 결과 리스트 (가로 스크롤, 카드 재사용) -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvSearchResults"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:clipToPadding="false"
        android:overScrollMode="never"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/emptySearchContainer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>


    <!-- 섹션 타이틀 -->
    <TextView
        android:id="@+id/tvSectionTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="40dp"
        android:text="추천 커뮤니티"
        android:textColor="@color/gray2"
        style="@style/TextAppearance.App.LabelLarge"
        android:fontFamily="@font/roboto_bold"
        app:layout_constraintTop_toBottomOf="@id/rvSearchResults"
        app:layout_constraintStart_toStartOf="parent"/>

    <!-- 가로 스크롤 커뮤니티 리스트 -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvCommunitySuggestions"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:clipToPadding="false"
        android:overScrollMode="never"
        app:layout_constraintTop_toBottomOf="@id/tvSectionTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>