<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="16dp"
    android:paddingVertical="8dp">

    <!-- 프로필 아이콘 -->
    <ImageView
        android:id="@+id/iv_profile"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:src="@drawable/ic_profile_outline"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- 알림 텍스트 -->
    <TextView
        android:id="@+id/tv_message"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="user1, user2 님 외 여러 명이 회원님의 피드를 좋아합니다."
        android:textColor="@color/black"
        style="@style/TextAppearance.App.LabelSmall"
        android:ellipsize="end"
        android:lineSpacingExtra="2dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintStart_toEndOf="@id/iv_profile"
        app:layout_constraintTop_toTopOf="@id/iv_profile"
        app:layout_constraintBottom_toBottomOf="@id/iv_profile"
        app:layout_constraintEnd_toStartOf="@id/view_dot" />

    <!-- 빨간 알림 점 -->
    <View
        android:id="@+id/view_dot"
        android:layout_width="8dp"
        android:layout_height="8dp"
        android:background="@drawable/bg_red_noti"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>