<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.chip.Chip
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/chip"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    style="@style/Widget.MaterialComponents.Chip.Filter"

    android:text="커뮤니티"
    android:textAppearance="@style/TextAppearance.App.BodySmall"

    android:checkable="true"
    app:checkedIconVisible="false"
    app:closeIconVisible="false"

    app:chipBackgroundColor="@color/selector_community_chip_bg"
    app:chipStrokeColor="@color/selector_community_chip_stroke"
    app:chipStrokeWidth="1.5dp"
    app:chipCornerRadius="999dp"
    app:chipMinHeight="28dp"
    app:chipStartPadding="3dp"
    app:chipEndPadding="3dp"
    android:textColor="@color/selector_community_chip_text"
    app:rippleColor="@android:color/transparent" />