<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/step1_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <!-- 제목 -->
    <TextView
        android:id="@+id/tv_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="계정을 생성하세요"
        style="@style/TextAppearance.App.TitleLarge"
        android:fontFamily="@font/roboto_bold"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- 이름 -->
    <EditText
        android:id="@+id/et_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="32dp"
        android:layout_marginTop="44dp"
        android:background="@android:color/transparent"
        android:hint="이름"
        style="@style/TextAppearance.App.LabelSmall"
        android:textColor="@color/gray3"
        android:textColorHint="@color/gray3"
        android:inputType="textPersonName|textCapWords"
        android:maxLines="1"
        android:includeFontPadding="false"
        android:minHeight="0dp"
        android:paddingStart="4dp"
        android:paddingBottom="8dp"
        android:gravity="bottom"
        app:layout_constraintTop_toBottomOf="@id/tv_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <View
        android:id="@+id/line_name"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginHorizontal="32dp"
        android:background="@color/gray4"
        app:layout_constraintTop_toBottomOf="@id/et_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- 이메일 주소 -->
    <EditText
        android:id="@+id/et_email"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="32dp"
        android:layout_marginTop="28dp"
        android:background="@android:color/transparent"
        android:hint="이메일 주소"
        style="@style/TextAppearance.App.LabelSmall"
        android:textColor="@color/gray3"
        android:textColorHint="@color/gray3"
        android:inputType="textEmailAddress|textNoSuggestions"
        android:maxLines="1"
        android:includeFontPadding="false"
        android:minHeight="0dp"
        android:paddingStart="4dp"
        android:paddingBottom="8dp"
        android:gravity="bottom"
        app:layout_constraintTop_toBottomOf="@id/line_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <View
        android:id="@+id/line_email"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginHorizontal="32dp"
        android:background="@color/gray4"
        app:layout_constraintTop_toBottomOf="@id/et_email"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- 생년월일 -->
    <EditText
        android:visibility="gone"
        android:id="@+id/et_birth"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="32dp"
        android:layout_marginTop="28dp"
        android:background="@android:color/transparent"
        android:hint="생년월일"
        style="@style/TextAppearance.App.LabelSmall"
        android:textColor="@color/gray3"
        android:textColorHint="@color/gray3"
        android:inputType="date"
        android:maxLines="1"
        android:includeFontPadding="false"
        android:minHeight="0dp"
        android:paddingStart="4dp"
        android:paddingBottom="8dp"
        android:gravity="bottom"
        app:layout_constraintTop_toBottomOf="@id/line_email"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <View
        android:visibility="gone"
        android:id="@+id/line_birth"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginHorizontal="32dp"
        android:background="@color/gray4"
        app:layout_constraintTop_toBottomOf="@id/et_birth"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tv_email_error"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:layout_marginEnd="32dp"
        android:layout_marginTop="3dp"
        android:text="이메일 형식이 옳지 않습니다"
        style="@style/TextAppearance.App.LabelTiny"
        android:textColor="@color/point_red"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/line_email"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>