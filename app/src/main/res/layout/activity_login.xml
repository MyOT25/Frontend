<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/login_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="24dp"
    android:paddingBottom="20dp"
    android:background="@color/white">

    <!-- 취소 -->
    <TextView
        android:id="@+id/tv_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="취소"
        style="@style/TextAppearance.App.BodyMedium"
        android:textColor="@color/gray2"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <!-- 로고(선택) -->
    <ImageView
        android:id="@+id/iv_logo"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:src="@drawable/ic_logo"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/tv_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- 제목 -->
    <TextView
        android:id="@+id/tv_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="로그인"
        style="@style/TextAppearance.App.TitleLarge"
        android:fontFamily="@font/roboto_bold"
        android:layout_marginTop="24dp"
        android:layout_marginStart="32dp"
        app:layout_constraintTop_toBottomOf="@id/tv_cancel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>


    <!-- 아이디/이메일 -->
    <EditText
        android:id="@+id/et_id"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="32dp"
        android:layout_marginTop="44dp"
        android:background="@android:color/transparent"
        android:hint="아이디 또는 이메일"
        style="@style/TextAppearance.App.LabelSmall"
        android:textColor="@color/gray1"
        android:textColorHint="@color/gray3"
        android:inputType="textEmailAddress|textNoSuggestions"
        android:imeOptions="actionNext"
        android:includeFontPadding="false"
        android:minHeight="0dp"
        android:paddingStart="4dp"
        android:paddingBottom="8dp"
        android:gravity="bottom"
        app:layout_constraintTop_toBottomOf="@id/tv_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <View
        android:id="@+id/line_id"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginHorizontal="32dp"
        android:background="@color/gray4"
        app:layout_constraintTop_toBottomOf="@id/et_id"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- 비밀번호 -->
    <EditText
        android:id="@+id/et_pw"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="32dp"
        android:layout_marginTop="24dp"
        android:background="@android:color/transparent"
        android:hint="비밀번호"
        style="@style/TextAppearance.App.LabelSmall"
        android:textColor="@color/gray1"
        android:textColorHint="@color/gray3"
        android:inputType="textPassword"
        android:imeOptions="actionDone"
        android:includeFontPadding="false"
        android:minHeight="0dp"
        android:paddingStart="4dp"
        android:paddingBottom="8dp"
        android:gravity="bottom"
        app:layout_constraintTop_toBottomOf="@id/line_id"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- 비밀번호 눈/슬래시 아이콘 -->
    <ImageView
        android:id="@+id/iv_pw_toggle"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:src="@drawable/ic_eye_off"
        app:layout_constraintTop_toTopOf="@id/et_pw"
        app:layout_constraintEnd_toEndOf="@id/et_pw"
        android:clickable="true"
        android:focusable="true"/>

    <View
        android:id="@+id/line_pw"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginHorizontal="32dp"
        android:background="@color/gray4"
        app:layout_constraintTop_toBottomOf="@id/et_pw"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- 로그인 버튼 -->
    <FrameLayout
        android:id="@+id/btn_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingVertical="4dp"
        android:paddingHorizontal="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/bg_write_btn_disabled"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?attr/selectableItemBackgroundBorderless"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <TextView
            android:id="@+id/tv_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/TextAppearance.App.BodySmall"
            android:text="로그인"
            android:textColor="@color/gray4"
            android:layout_gravity="center"/>
    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>