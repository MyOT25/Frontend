<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="110dp"
    android:background="@android:color/white">

    <!-- 내 커뮤니티 화면 -->
    <!-- 상단 AppBarLayout -->
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.MaterialComponents.Dark.ActionBar"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Toolbar -->
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar_my_community"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:navigationIcon="@drawable/ic_exit"
            app:title="내 커뮤니티"
            app:titleTextColor="@android:color/black"
            android:background="@android:color/white" />

    </com.google.android.material.appbar.AppBarLayout>

    <!-- 첫 번째 커뮤니티 항목 -->
    <LinearLayout
        android:id="@+id/community_item1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        app:layout_constraintTop_toBottomOf="@id/appBarLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/profile_image1"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_profile"
            android:contentDescription="@string/app_name" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="12dp"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/community_name1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="커뮤니티 이름"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/community_desc1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="배우 커뮤니티"
                android:textSize="14sp"
                android:textColor="@android:color/darker_gray" />

        </LinearLayout>
    </LinearLayout>

    <!-- 두 번째 커뮤니티 항목 -->
    <LinearLayout
        android:id="@+id/community_item2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        app:layout_constraintTop_toBottomOf="@id/community_item1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/profile_image2"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_profile"
            android:contentDescription="@string/app_name" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="12dp"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/community_name2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="커뮤니티 이름"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/community_desc2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="뮤지컬 커뮤니티"
                android:textSize="14sp"
                android:textColor="@android:color/darker_gray" />

        </LinearLayout>
    </LinearLayout>
    <!-- 임시로 정적인 레이아웃으로 만들었지만 아래쪽은 나중에 리사이클러 뷰로 바꿔야함. -->

</androidx.constraintlayout.widget.ConstraintLayout>
