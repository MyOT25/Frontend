<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_profile_intro"
        android:layout_width="match_parent"
        android:layout_height="189dp"
        android:background="@drawable/bg_profile_no_bg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/ll_profile_wrapper"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <!-- 왼쪽 프로필 정보 영역 -->
            <LinearLayout
                android:layout_width="88dp"
                android:layout_height="wrap_content"
                android:paddingHorizontal="8dp"
                android:background="@drawable/ic_profile_dashed_line"
                android:gravity="start"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_profile_image"
                    android:layout_width="42dp"
                    android:layout_height="42dp"
                    android:background="@drawable/ic_profile_outline"
                    android:layout_marginTop="7dp"
                    android:scaleType="centerCrop"/>

                <TextView
                    android:id="@+id/tv_user_intro"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:maxLines="4"
                    android:minLines="4"
                    style="@style/TextAppearance.App.LabelTiny"
                    android:textColor="@color/gray1"
                    android:text="사용자의 소개입니다.글자 수 제한은 00자 입니다." />

                <TextView
                    android:id="@+id/tv_follow_stats"
                    style="@style/TextAppearance.App.LabelTiny"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="팔로워 000\n팔로잉 000"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/btn_follow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_profile_follow"
                    android:layout_marginTop="20dp"
                    android:text="팔로우"
                    android:textColor="@color/white"
                    style="@style/TextAppearance.App.BodySmall"
                    android:layout_marginBottom="10dp"
                    android:paddingHorizontal="8dp"
                    android:paddingTop="2dp"
                    android:paddingBottom="5dp"
                    android:gravity="center"
                    android:clickable="true"
                    android:focusable="true" />
            </LinearLayout>

            <!-- 점선 및 오른쪽 이름/아이디 -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginEnd="8dp"
                app:layout_constraintStart_toEndOf="@+id/view_divider"
                app:layout_constraintEnd_toEndOf="parent">

                <TextView
                    android:id="@+id/tv_username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:text="UsersName"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tv_user_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="\@usersID"
                    android:textColor="#888888"
                    android:textSize="14sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_username" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>