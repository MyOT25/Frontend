<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/step5_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/white">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- 제목 -->
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="커뮤니티에 가입하세요"
            style="@style/TextAppearance.App.TitleLarge"
            android:fontFamily="@font/roboto_bold"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- 가이드 -->
        <TextView
            android:id="@+id/tv_guide"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            android:text="관심있는 배우, 관극의 커뮤니티에 가입하고\n유저들과 정보를 공유하세요"
            style="@style/TextAppearance.App.LabelSmall"
            android:textColor="@color/gray3"
            app:layout_constraintTop_toBottomOf="@id/tv_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- 관극 커뮤니티 -->
        <TextView
            android:id="@+id/tv_musical_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="관극 커뮤니티"
            style="@style/TextAppearance.App.LabelLarge"
            android:fontFamily="@font/roboto_bold"
            android:textColor="@color/gray2"
            android:layout_marginTop="40dp"
            android:layout_marginStart="16dp"
            app:layout_constraintTop_toBottomOf="@id/tv_guide"
            app:layout_constraintStart_toStartOf="parent" />

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/chips_musical"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            app:singleLine="false"
            app:chipSpacingHorizontal="8dp"
            app:chipSpacingVertical="10dp"
            app:layout_constraintTop_toBottomOf="@id/tv_musical_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- 배우 커뮤니티 -->
        <TextView
            android:id="@+id/tv_actor_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="배우 커뮤니티"
            style="@style/TextAppearance.App.LabelLarge"
            android:fontFamily="@font/roboto_bold"
            android:textColor="@color/gray2"
            android:layout_marginTop="40dp"
            android:layout_marginStart="16dp"
            app:layout_constraintTop_toBottomOf="@id/chips_musical"
            app:layout_constraintStart_toStartOf="parent" />

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/chips_actor"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="120dp"
            app:singleLine="false"
            app:chipSpacingHorizontal="8dp"
            app:chipSpacingVertical="10dp"
            app:layout_constraintTop_toBottomOf="@id/tv_actor_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>