<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingStart="16dp"
    android:paddingTop="24dp"
    android:paddingBottom="16dp"
    android:paddingEnd="16dp"
    android:gravity="start"
    android:background="@color/white">

    <!-- 프로필 사진 -->
    <ImageView
        android:id="@+id/iv_nav_profile"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:src="@drawable/ic_profile"
        android:contentDescription="프로필"
        android:scaleType="centerCrop" />

    <!-- 닉네임 -->
    <TextView
        android:id="@+id/tv_nav_nickname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="사용자 닉네임"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="12dp" />

    <!-- 핸들 / 태그 -->
    <TextView
        android:id="@+id/tv_nav_tag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Handle and Tag"
        android:textSize="14sp"
        android:textColor="#666666"
        android:layout_marginTop="4dp" />

    <!-- 팔로워 정보 -->
    <TextView
        android:id="@+id/tv_nav_follow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="팔로워 123 / 팔로우 456"
        android:textSize="14sp"
        android:textColor="#888888"
        android:layout_marginTop="4dp" />
</LinearLayout>

<!-- 햄버거바 상단 프로필 화면-->
