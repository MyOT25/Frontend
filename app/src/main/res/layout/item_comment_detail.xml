<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_feed_detail"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="12dp"
        android:elevation="4dp"
        android:paddingTop="12dp"
        android:paddingBottom="22dp">

        <!-- 커뮤니티 이미지 -->
        <ImageView
            android:id="@+id/iv_feed_community"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="10dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_no_community"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- 프로필 이미지 -->
        <ImageView
            android:id="@+id/iv_feed_profile"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="25dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_no_profile"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- 유저 이름 -->
        <TextView
            android:id="@+id/tv_feed_username"
            style="@style/TextAppearance.App.LabelLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="12dp"
            android:text="유저1"
            android:textColor="@color/black"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@id/iv_feed_profile"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- 유저 아이디 -->
        <TextView
            android:id="@+id/tv_feed_userid"
            style="@style/TextAppearance.App.LabelSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_medium"
            android:text="\@user1"
            android:textColor="@color/gray2"
            app:layout_constraintStart_toStartOf="@+id/tv_feed_username"
            app:layout_constraintTop_toBottomOf="@id/tv_feed_username" />

        <!-- 본문 텍스트 -->
        <TextView
            android:id="@+id/tv_feed_content"
            style="@style/TextAppearance.App.BodySmall"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="26dp"
            android:layout_marginEnd="32dp"
            android:text="텍스트텍스트텍스트텍스트텍스트텍스트텍스트텍스트텍스트텍스트텍스트"
            android:textColor="@color/black"
            app:layout_constraintBottom_toBottomOf="@+id/tv_feed_userid"            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toEndOf="@+id/tv_feed_username"
            app:layout_constraintTop_toTopOf="@+id/tv_feed_username" />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/bg_comment_contact"/>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="12dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/bg_feed_detail"
        android:elevation="4dp"
        android:paddingTop="12dp"
        android:paddingBottom="20dp">

        <!-- 뒤로가기 이미지 -->
        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="8dp"
            android:src="@drawable/ic_back"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <!-- 더보기 이미지 -->
        <ImageView
            android:id="@+id/iv_overflow"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="12dp"
            android:src="@drawable/ic_feed_overflow"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- 커뮤니티 이미지 -->

        <!-- 프로필 이미지 -->
        <ImageView
            android:id="@+id/iv_profile"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:layout_marginStart="19dp"
            android:layout_marginTop="14dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_no_profile"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/iv_back" />

        <!-- 유저 이름 -->
        <TextView
            android:id="@+id/tv_username"
            style="@style/TextAppearance.App.LabelLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="1dp"
            android:text="유저2"
            android:textColor="@color/black"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@id/iv_profile"
            app:layout_constraintTop_toTopOf="@+id/iv_profile" />

        <!-- 유저 아이디 -->
        <TextView
            android:id="@+id/tv_userid"
            style="@style/TextAppearance.App.LabelSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_medium"
            android:text="\@user2"
            android:textColor="@color/gray2"
            app:layout_constraintStart_toStartOf="@+id/tv_username"
            app:layout_constraintTop_toBottomOf="@id/tv_username" />

        <!-- 본문 텍스트 -->
        <TextView
            android:id="@+id/tv_content"
            style="@style/TextAppearance.App.BodyMedium"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="12dp"
            android:text="텍스트텍스트텍스트텍스트텍스트텍스트텍스트텍스트텍스트텍스트텍스트텍스트텍스트텍스트텍스트텍스트텍스트텍스트텍스트텍스트텍스트텍스트텍스트텍스트"
            android:textColor="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_userid" />


        <!-- 날짜 표시 -->
        <TextView
            android:id="@+id/tv_date"
            style="@style/TextAppearance.App.LabelMedium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/roboto_medium"
            android:text="2025/00/00 00:00"
            android:textColor="@color/gray3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_content" />

        <!-- 피드백 -->
        <LinearLayout
            android:id="@+id/ll_feed_actions"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_date">

            <!-- 댓글 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_comment"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:src="@drawable/ic_feed_comment"
                    app:tint="@color/gray3" />

                <TextView
                    android:id="@+id/tv_comment"
                    style="@style/TextAppearance.App.BodyMedium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="9dp"
                    android:fontFamily="@font/roboto_semibold"
                    android:text="000"
                    android:textColor="@color/gray3" />
            </LinearLayout>

            <!-- 좋아요 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_like"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:src="@drawable/ic_feed_like"
                    app:tint="@color/gray3" />

                <TextView
                    android:id="@+id/tv_like"
                    style="@style/TextAppearance.App.BodyMedium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="9dp"
                    android:fontFamily="@font/roboto_semibold"
                    android:text="000"
                    android:textColor="@color/gray3" />
            </LinearLayout>

            <!-- 리포스트 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_repost"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_feed_repost"
                    app:tint="@color/gray3" />


                <TextView
                    android:id="@+id/tv_repost"
                    style="@style/TextAppearance.App.BodyMedium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="9dp"
                    android:fontFamily="@font/roboto_semibold"
                    android:text="000"
                    android:textColor="@color/gray3" />
            </LinearLayout>

            <!-- 북마크 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_quote"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/ic_feed_quote"
                    app:tint="@color/gray3" />

                <TextView
                    android:id="@+id/tv_quote"
                    style="@style/TextAppearance.App.BodyMedium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="9dp"
                    android:fontFamily="@font/roboto_semibold"
                    android:text="000"
                    android:textColor="@color/gray3" />
            </LinearLayout>
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/tv_no_reply"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="답글을 달아보세요"
        android:layout_marginTop="32dp"
        style="@style/TextAppearance.App.BodySmall"
        android:layout_gravity="center"
        android:visibility="gone"
        android:textColor="@color/gray4"/>

</LinearLayout>