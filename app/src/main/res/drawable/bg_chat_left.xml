<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- 말풍선 내부 배경색 (흰색) -->
    <solid android:color="#FFFFFF"/>

    <!-- 테두리 선 두께/색 -->
    <stroke
        android:width="1dp"
        android:color="#000000"/>

    <!-- 모서리 둥글기 -->
    <corners android:radius="16dp"/>

    <!-- 내부 여백: 텍스트와 테두리 사이 -->
    <padding
        android:left="12dp"
        android:top="8dp"
        android:right="12dp"
        android:bottom="8dp"/>
</shape>
