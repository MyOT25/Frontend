<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="TextAppearance">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="TextAppearance.App">
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">14sp</item>
    </style>
    <!-- Display -->
    <style name="TextAppearance.App.DisplayLarge">
        <item name="android:fontFamily">@font/roboto_family</item>
        <item name="android:textSize">57sp</item>
        <item name="android:lineHeight">64sp</item>
        <item name="android:letterSpacing">0</item>
    </style>
    <style name="TextAppearance.App.DisplayMedium">
        <item name="android:fontFamily">@font/roboto_family</item>
        <item name="android:textSize">45sp</item>
        <item name="android:lineHeight">52sp</item>
        <item name="android:letterSpacing">0</item>
    </style>
    <style name="TextAppearance.App.DisplaySmall">
        <item name="android:fontFamily">@font/roboto_family</item>
        <item name="android:textSize">36sp</item>
        <item name="android:lineHeight">44sp</item>
        <item name="android:letterSpacing">0</item>
    </style>

    <!-- Headline -->
    <style name="TextAppearance.App.HeadlineLarge">
        <item name="android:fontFamily">@font/roboto_family</item>
        <item name="android:textSize">32sp</item>
        <item name="android:lineHeight">40sp</item>
        <item name="android:letterSpacing">0</item>
    </style>
    <style name="TextAppearance.App.HeadlineMedium">
        <item name="android:fontFamily">@font/roboto_family</item>
        <item name="android:textSize">28sp</item>
        <item name="android:lineHeight">36sp</item>
        <item name="android:letterSpacing">0</item>
    </style>
    <style name="TextAppearance.App.HeadlineSmall">
        <item name="android:fontFamily">@font/roboto_family</item>
        <item name="android:textSize">24sp</item>
        <item name="android:lineHeight">32sp</item>
        <item name="android:letterSpacing">0</item>
    </style>

    <!-- Title -->
    <style name="TextAppearance.App.TitleLarge">
        <item name="android:fontFamily">@font/roboto_family</item>
        <item name="android:fontWeight">400</item>
        <item name="android:textSize">22sp</item>
        <item name="android:lineHeight">28sp</item>
        <item name="android:letterSpacing">0</item>
    </style>
    <style name="TextAppearance.App.TitleMedium">
        <item name="android:fontFamily">@font/roboto_family</item>
        <item name="android:fontWeight">500</item>
        <item name="android:textSize">16sp</item>
        <item name="android:lineHeight">24sp</item>
        <!-- 0.15px ÷ 16px = 0.009375 → 0.0094 -->
        <item name="android:letterSpacing">0.0094</item>
    </style>
    <style name="TextAppearance.App.TitleSmall">
        <item name="android:fontFamily">@font/roboto_family</item>
        <item name="android:fontWeight">500</item>
        <item name="android:textSize">14sp</item>
        <item name="android:lineHeight">20sp</item>
        <!-- 0.1px ÷ 14px = 0.00714 → 0.0071 -->
        <item name="android:letterSpacing">0.0071</item>
    </style>

    <!-- Label -->
    <style name="TextAppearance.App.LabelLarge">
        <item name="android:fontFamily">@font/roboto_family</item>
        <item name="android:fontWeight">500</item>
        <item name="android:textSize">14sp</item>
        <item name="android:lineHeight">20sp</item>
        <!-- 0.1px ÷ 14px = 0.0071 -->
        <item name="android:letterSpacing">0.0071</item>
    </style>
    <style name="TextAppearance.App.LabelMedium">
        <item name="android:fontFamily">@font/roboto_family</item>
        <item name="android:fontWeight">500</item>
        <item name="android:textSize">12sp</item>
        <item name="android:lineHeight">16sp</item>
        <!-- 0.5px ÷ 12px = 0.0417 -->
        <item name="android:letterSpacing">0.0417</item>
    </style>
    <style name="TextAppearance.App.LabelSmall">
        <item name="android:fontFamily">@font/roboto_family</item>
        <item name="android:fontWeight">500</item>
        <item name="android:textSize">11sp</item>
        <item name="android:lineHeight">16sp</item>
        <!-- 0.5px ÷ 11px = 0.0455 -->
        <item name="android:letterSpacing">0.0455</item>
    </style>
    <style name="TextAppearance.App.LabelTiny">
        <item name="android:fontFamily">@font/roboto_family</item>
        <item name="android:fontWeight">400</item>
        <item name="android:textSize">10sp</item>
        <item name="android:lineHeight">10sp</item>
        <item name="android:letterSpacing">0</item>
    </style>

    <!-- Body -->
    <style name="TextAppearance.App.BodyLarge">
        <item name="android:fontFamily">@font/roboto_family</item>
        <item name="android:fontWeight">400</item>
        <item name="android:textSize">16sp</item>
        <item name="android:lineHeight">24sp</item>
        <!-- 0.5px ÷ 16px = 0.03125 -->
        <item name="android:letterSpacing">0.0313</item>
    </style>
    <style name="TextAppearance.App.BodyMedium">
        <item name="android:fontFamily">@font/roboto_family</item>
        <item name="android:fontWeight">400</item>
        <item name="android:textSize">14sp</item>
        <item name="android:lineHeight">20sp</item>
        <!-- 0.25px ÷ 14px = 0.0179 -->
        <item name="android:letterSpacing">0.0179</item>
    </style>
    <style name="TextAppearance.App.BodySmall">
        <item name="android:fontFamily">@font/roboto_family</item>
        <item name="android:fontWeight">400</item>
        <item name="android:textSize">12sp</item>
        <item name="android:lineHeight">16sp</item>
        <!-- 0.4px ÷ 12px = 0.0333 -->
        <item name="android:letterSpacing">0.0333</item>
    </style>

    <!-- 플로팅 버튼을 원형으로 변경 -->
    <style name="FabShape">
        <item name="cornerSize">50%</item>
    </style>
</resources>