    </style>

    <style name="TextAppearance.App.HeadlineSmall">
        <item name="android:textSize">24sp</item>
        <item name="android:lineHeight">26sp</item> <!-- 32 / 1.25 -->
        <item name="android:letterSpacing">0</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

    <!-- Title -->
    <style name="TextAppearance.App.TitleLarge">
        <item name="android:textSize">22sp</item>
        <item name="android:lineHeight">22sp</item> <!-- 28 / 1.25 -->
        <item name="android:letterSpacing">0</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

    <style name="TextAppearance.App.TitleMedium">
        <item name="android:textSize">16sp</item>
