<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="TextAppearance">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="TextAppearance.App">
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">14sp</item>
    </style>


    <!-- Display -->
    <style name="TextAppearance.App.DisplayLarge">
        <item name="android:textSize">57sp</item>
        <item name="android:lineHeight">51sp</item> <!-- 64px / 1.25 -->
        <item name="android:letterSpacing">0</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

    <style name="TextAppearance.App.DisplayMedium">
        <item name="android:textSize">45sp</item>
        <item name="android:lineHeight">42sp</item> <!-- 52 / 1.25 -->
        <item name="android:letterSpacing">0</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

    <style name="TextAppearance.App.DisplaySmall">
        <item name="android:textSize">36sp</item>
        <item name="android:lineHeight">35sp</item> <!-- 44 / 1.25 -->
        <item name="android:letterSpacing">0</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

    <!-- Headline -->
    <style name="TextAppearance.App.HeadlineLarge">
        <item name="android:textSize">32sp</item>
        <item name="android:lineHeight">32sp</item> <!-- 40 / 1.25 -->
        <item name="android:letterSpacing">0</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

    <style name="TextAppearance.App.HeadlineMedium">
        <item name="android:textSize">28sp</item>
